<div class="card card-bottom">
   <div class="row g-0">
      <div class="col-md-2">
         <img src="{{image}}" class="img-fluid rounded-start" alt="goods photo">
      </div>
      <div class="col-md-10">
         <div class="card-body">
            <div class="row">
               <div class="col-4">
                  <h5 class="card-title">{{name}}</h5>
                  <p class="card-text">{{description}}</p>
               </div>
               <div class="col-3 text-center">
                  <p class="card-text">
                     <small class="text-body-secondary">{{price.title}}:</small>
                     <span>{{price.value}}</span>
                  </p>
               </div>
               <div class="col-2 text-center">
                  <small class="text-body-secondary">{{amount}}</small>
               </div>
               <div class="col-3 button">
                  {{#each buttons}}
                  <span>
                     <button class="btn {{#if isPrimary}} btn-primary {{/if}}
                        {{#if isDanger}} btn-outline-danger {{/if}} mb-3"
                        type="button">{{text}}</button>
                  </span>
                  {{/each}}
               </div>
            </div>
         </div>
      </div>
   </div>
</div>