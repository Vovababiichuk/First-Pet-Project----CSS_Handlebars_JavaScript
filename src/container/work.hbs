{{#with main}}
<main class="p-4 pb-3">
   <section class="work">
      <div class="mb-3">{{> title data="Work history"}}</div>
      <div>
         <ul>
            {{#each works}}
            <li>
               <div class="mb-3">{{position}}</div>
               <div class="mb-3">
                  {{duration.from}} 
                  -
                  {{#if duration.to}}
                  {{duration.to}}
                  {{else}}
                  (досі працюємо)
                  {{/if}}
               </div>
               <div class="mb-3">
                  {{#if company.url}}
                  {{> link text=company.name href=company.url blank=true
                  noLine=true}}
                  {{else}}
                  <b>{{company.name}}</b>
                  {{/if}}
               </div>
               <div class="mb-3">
                  <strong>Projects ({{projectAmount}})</strong>
               </div>
               <ul>
                  {{#each projects}}
                  <li>
                     <div class="mb-2">{{> link text=name href=url blank=true
                        noLine=true}}</div>
                     <div>
                        <p>{{about}}</p>
                     </div>
                     <div class="alert alert-warning" role="alert">
                        <div class="mb-2">
                           <em>Project stacks ({{stackAmount}})</em>
                           <div>
                              <ul>
                                 {{#each stacks}}
                                 <li>{{name}}</li>
                                 {{/each}}
                              </ul>
                           </div>
                        </div>
                     </div>
                     <div class="alert alert-warning" role="alert">                       
                        <div class="mb-2">
                           <em>Project awards ({{awardAmount}})</em>
                        </div>
                        <div>
                           <ul>
                              {{#each awards}}
                              <li class="mb-3">{{name}}</li>
                              {{/each}}
                           </ul>
                        </div>
                     </div>
                  </li>
                  {{/each}}
               </ul>
            </li>
            {{/each}}
         </ul>
      </div>
      <hr class="mb-0 mt-4">
   </section>
</main>
{{/with}}
